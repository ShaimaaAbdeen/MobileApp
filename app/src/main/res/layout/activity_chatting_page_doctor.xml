<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mrsshimaa.mobileapp.ChattingPageDoctor">
    <FrameLayout
        android:id="@+id/nameframe"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"

        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/nametext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:onClick="showMembers"
            android:text="Name"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/addmembersicon"
            android:layout_width="23dp"
            android:layout_height="22dp"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="14dp"
            android:onClick="addMembers"
            app:srcCompat="@drawable/addwhite" />
        <ImageView
            android:id="@+id/deletemembersicon"
            android:layout_width="21dp"
            android:layout_height="23dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="14dp"
            android:onClick="deleteMembers"
            app:srcCompat="@drawable/deletecrossoutlineinterfacesymbol" />
    </FrameLayout>

    <com.rockerhieu.emojicon.EmojiconEditText
        android:id="@+id/editemojicon"
        android:hint="Type emoji here"
        emojicon:emojiconSize="28sp"
        android:layout_width="292dp"
        android:layout_height="48dp"

        android:layout_marginTop="280dp"
        app:layout_constraintTop_toBottomOf="@+id/nameframe"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="6dp" />


    <ImageButton
        android:id="@+id/sendbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="send"
        app:srcCompat="@android:drawable/ic_menu_send"
        android:layout_marginStart="296dp"
        app:layout_constraintTop_toTopOf="@+id/allmesaages"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="298dp"
        app:layout_constraintLeft_toLeftOf="@+id/editemojicon" />

    <ListView
        android:id="@+id/allmesaages"
        android:layout_width="330dp"
        android:layout_height="271dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="16dp"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <FrameLayout
        android:id="@+id/emojicons"
        android:layout_width="339dp"
        android:layout_height="128dp"
        android:layout_alignParentBottom="true"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/editemojicon"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="378dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
