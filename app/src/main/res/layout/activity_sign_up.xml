<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.mrsshimaa.mobileapp.SignUp">

    <Button
        android:id="@+id/joinbtn"
        android:layout_width="38dp"
        android:layout_height="50dp"
        android:layout_marginBottom="11dp"

        android:layout_marginRight="2dp"
        android:background="@drawable/ovalbuttonblue"
        android:text="Join!"
        android:textColor="@color/colorAccent"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="320dp"
        tools:layout_editor_absoluteY="451dp" />

    <FrameLayout
        android:layout_width="335dp"
        android:layout_height="493dp"
        android:background="@drawable/roundedrect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.426">

        <EditText
            android:id="@+id/emailentry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="270dp"

            android:backgroundTint="#757575"
            android:ems="10"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/firstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="10dp"
            android:text="First Name"
            android:textColor="#757575"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="90dp"
            android:text="Last Name"
            android:textColor="#757575"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="170dp"
            android:text="Username"
            android:textColor="#757575"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="470dp"
            android:text="Age:"
            android:textColor="#757575"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nationalid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="410dp"
            android:text="National ID"
            android:textColor="#757575"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="250dp"
            android:text="Email"
            android:textColor="#757575"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="330dp"
            android:text="Password"
            android:textColor="#757575"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/firstnamentry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#757575"
            android:ems="10"
            android:inputType="textPersonName" />

        <Spinner
            android:id="@+id/spinnerage"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="468dp"
            android:textSize="10sp" />

        <Spinner
            android:id="@+id/spinnerbloodtype"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="182dp"
            android:layout_marginTop="468dp"
            android:textSize="10sp" />

        <EditText
            android:id="@+id/nationalidentry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="430dp"
            android:backgroundTint="#757575"
            android:ems="10"
            android:inputType="date" />

        <EditText
            android:id="@+id/passwordentry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="350dp"
            android:backgroundTint="#757575"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/spanfirstname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:text="*"
            android:textColor="#e12828" />

        <TextView
            android:id="@+id/spanlastname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="90dp"
            android:text="*"
            android:textColor="#e12828" />

        <TextView
            android:id="@+id/spanusername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="170dp"
            android:text="*"
            android:textColor="#e12828" />

        <TextView
            android:id="@+id/spanemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="250dp"
            android:text="*"
            android:textColor="#e12828" />

        <TextView
            android:id="@+id/spanpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="330dp"
            android:text="*"
            android:textColor="#e12828" />

        <TextView
            android:id="@+id/spanID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="410dp"
            android:text="*"
            android:textColor="#e12828" />

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="235dp"
            android:layout_marginTop="470dp"
            android:text="Sex" />

        <Spinner
            android:id="@+id/spinnersex"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="256dp"
            android:layout_marginTop="468dp"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/bloodtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="470dp"
            android:text="Blood Type:"
            android:textColor="#757575"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/lastnameentry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="110dp"
            android:backgroundTint="#757575"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/usernameentry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="190dp"
            android:backgroundTint="#757575"
            android:ems="10"
            android:inputType="textPersonName" />

    </FrameLayout>

</android.support.constraint.ConstraintLayout>
